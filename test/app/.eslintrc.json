{
  "extends": ["eslint:recommended"],
  "env": {
    "browser": false
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": 0,
    "node/no-unsupported-features/node-builtins": 0,
    "node/no-extraneous-require": ["error", {
      "allowModules": [
        "@okta/okta-auth-js"
      ]
    }],
    "node/no-missing-import": ["error", {
      "allowModules": [
        "@okta/okta-auth-js"
      ]
    }],
    "node/no-missing-require": ["error", {
      "allowModules": [
        "@okta/okta-auth-js"
      ]
    }],
    "semi": 2,
    "eol-last": 2
  }
}
